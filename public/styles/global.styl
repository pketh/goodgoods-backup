sans-serif = "Helvetica", Arial, Sans-serif
primary-color = black
link-color = blueviolet
primary-background = white // #fbfcdb

SMALL_WIDTH = 420px
MEDIUM_WIDTH = 650px

@font-face
  font-family: frankfurter
  font-style: bold
  src: url('https://cdn.glitch.com/ba48b5f1-377a-42b0-80c9-5625dcaab9de%2Ffrankfurter.woff2?1502065048672')

body
  font-family: sans-serif
  // background-color: transparent
  margin: 0
  padding: 0
  
#app
  padding: 8px
  padding-top: 20px
  padding-left: 15px
  padding-right: 15px
  // height: calc(100% - 28px)
  position: relative

a
  color: link-color
  &:hover
    text-decoration: none
  // .emoji
  //   text-decoration: none
  //   padding-right: 3px

header
  z-index: 3
  position: absolute
  left: 50%
  .header-container
    position: relative
    left: -50%
  h1
    font-family: frankfurter
    margin: 0
    line-height: 32px
    text-align: center
  a
    color: primary-color
    text-decoration: none
  
main
  margin-top: 15px

.item
  display: inline-block
  vertical-align: middle
  z-index: 2
  margin: 1rem
  position: relative
  transition: .2s
  max-width: 300px
  width: calc(25%% - 2rem)
  min-width: 220px
  img
    width: 100%
  &:hover
    transform: rotate3d(2, 2, 0, 40deg) translate3d(0,0,0)
    -webkit-transform-style: preserve-3d

.more-episodes
  margin-bottom: 3rem
  margin-top: 3rem
  .moar
    width: 200px
  ul
    padding-left: 1rem
  li
    list-style: none
    // margin-bottom: 0.5rem
    a
      background-color: primary-background
      padding: 3px
      border-radius: 5px
      display: inline-block
    
section,
footer
  margin-top: 20px

footer
  margin-bottom: 4rem
  p
    span
      background-color: primary-background
      padding: 3px
      border-radius: 5px

canvas#background
  position: fixed
  height: 100%
  width: 100%
  top: 0
  left: 0
  z-index: -1
  transform: translateZ(-1000px)


  

