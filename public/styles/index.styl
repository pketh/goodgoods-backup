BEDSHEET_DELAY = 1.5s
BEDSHEET_DURATION = 0.5s

.index-page
    
  canvas#background
    position: fixed
    height: 100%
    width: 100%
    top: 0
    left: 0
    z-index: -1

  main
    margin-top: 30px
    display: flex
    align-items: center

  nav
    z-index: 2
    margin: 1rem
    margin-right: 2rem
    @media (max-width: SMALL_WIDTH)
      margin: 0
      margin-right: 1rem

  .greeting,
  .greeting-link
    position: relative
    background-color: cyan
    padding: 10px
    border-radius: 5px
    max-width: 100px
    @media (max-width: SMALL_WIDTH)
      max-width: 150px
  .greeting-link
    position: absolute
    padding: 2px 6px
    &.left
      transform: rotate(-50deg)
      top: 105%;
      left: -10%;
    &.middle
      transform: rotate(-90deg)
      top: 130%
      left: 15%
    &.right
      transform: rotate(40deg)
      top: 85%
      left: 75%

  .item
    position: relative
    &.sheets
      position: relative
      overflow: hidden
      width: 100%
      max-width: 340px
      height: 100%
      max-height: 477px

  .bedsheet
    background-color: #fe0002
    position: absolute
    width: 100%
    max-width: 340px
    &.one
    &.two
    &.three
      animation: slideUp BEDSHEET_DURATION ease-out
      animation-fill-mode: forwards
    &.one
      animation-delay: (BEDSHEET_DELAY * 1)
    &.two
      animation-delay: (BEDSHEET_DELAY * 2) + (BEDSHEET_DURATION * 1)
    &.three
      animation-delay: (BEDSHEET_DELAY * 3) + (BEDSHEET_DURATION * 2)


@keyframes slideUp
  to
    transform: translateY(-100%)