BEDSHEET_DELAY = 1.5s
BEDSHEET_DURATION = 0.5s

.index-page
    
  canvas#background
    position: fixed
    height: 100%
    width: 100%
    top: 0
    left: 0
    z-index: -1
    transform: translateZ(-1000px)

  main
    margin-top: 30px
    display: flex
    flex-direction: row
    flex-wrap: wrap
    align-items: center
    align-content: stretch

  // nav,
  // .item
  //   display: inline-block
    
  nav
    z-index: 2
    margin: 1rem
    margin-right: 3rem
    @media (max-width: MEDIUM_WIDTH)
      margin-right: 1rem
    @media (max-width: SMALL_WIDTH)
      margin: 0
      // margin-right: 1rem

  .greeting,
  .greeting-link
    position: relative
    background-color: cyan
    padding: 10px
    border-radius: 5px
    max-width: 100px
    @media (max-width: SMALL_WIDTH)
      max-width: 150px

  .greeting
    min-width: 100px

  .greeting-link
    position: absolute
    padding: 2px 6px
    &.left
      transform: rotate(-50deg)
      top: 105%;
      left: -10%;
    &.middle
      transform: rotate(-90deg)
      top: 130%
      left: 15%
    &.right
      transform: rotate(40deg)
      top: 85%
      left: 75%

  .item
    z-index: 2
    margin: 1rem
    position: relative
    min-width: 110px
    transition: .2s
    // width: 100%
    width: 30%
    img
      width: 100%
    &:hover
      // -webkit-backface-visibility: hidden
      transform: rotate3d(2, 2, 0, 40deg) translate3d(0,0,0)
      // box-shadow: 10px 10px rgba(0, 0, 0, .3)


  .sheets
    // position: relative
    // overflow: hidden
    // width: 100%
    max-width: 340px
    // height: 100%
    max-height: 453px
    // -webkit-transform:translate3d(0,0,0)
    width: 30%;
    height: 100%;
    // max-height: 400px;
    // max-width: 600px;
    min-width: 200px;
    min-height: 280px;
    overflow: hidden;

    .bedsheet
      // position: absolute
      transform: translate(0,0)
      width: 100%
      // max-width: 340px
      &.one
      &.two
      &.three
        animation: slideUp BEDSHEET_DURATION ease-out
        animation-fill-mode: forwards
      &.one
        animation-delay: (BEDSHEET_DELAY * 1)
      &.two
        animation-delay: (BEDSHEET_DELAY * 2) + (BEDSHEET_DURATION * 1)
      &.three
        animation-delay: (BEDSHEET_DELAY * 3) + (BEDSHEET_DURATION * 2)


  .resort
    img
      // max-width: 100%
      min-width: 280px
      max-width: 560px


@keyframes slideUp
  to
    transform: translateY(-100%)