nav
  display: inline-block
  // vertical-align: middle
  z-index: 2
  margin: 1rem
  // margin-right: 2rem
  // margin-bottom: 4rem
  @media (max-width: MEDIUM_WIDTH)
    margin-right: 1rem
  @media (max-width: SMALL_WIDTH)
    margin: 0

.greeting,
.greeting-link
  // z-index: 10
  position: relative
  background-color: cyan
  padding: 10px
  border-radius: 5px
  max-width: 100px
  @media (max-width: SMALL_WIDTH)
    max-width: 150px

.greeting
  min-width: 100px

.greeting-link
  position: absolute
  padding: 2px 6px
  &.left
    transform: rotate(-50deg)
    top: 105%;
    left: -5%;
  &.middle
    // transform: rotate(-90deg)
    // top: 130%
    // left: 15%
    transform: rotate(60deg)
    top: 120%
    left: 40%
  &.right
    transform: rotate(40deg)
    top: 85%
    left: 75%
