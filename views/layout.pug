head
  title= title
  meta(name="description" content="The store of a Good Good podcast")
  link(id="favicon" rel="icon" href="https://glitch.com/favicon.ico" type="image/x-icon")
  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible" content="IE=edge")
  meta(name="viewport" content="width=device-width, initial-scale=1")
  link(rel="stylesheet" href="/styles/styles.css")
body
  #app(@mousedown="splatter" :class="page")

    header
      .header-container
        a(href="/")
          h1.good Good
          h1.goods Goods

    block content

    footer
      p
        span= "Good Goods is made by good friends "
          a(:href="pirijan") Pirijan
          span= " and "
          a(:href="michelle") Michelle
      // p 
      //   span
      //     a(href="#") Support us on Patreon
      p
        span
          a(:href="twitter") @goodgoodscast
      p
        span
          a(href="https://glitch.com/edit/#!/goodgoods")
            img.glitch-icon(src="https://cdn.glitch.com/ba48b5f1-377a-42b0-80c9-5625dcaab9de%2Fglitch.svg?1506304036938")
            span View Source

  if production
    script(src="https://vuejs.org/js/vue.min.js")
  else
    script(src="https://vuejs.org/js/vue.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js")
  // script(src="https://cdnjs.cloudflare.com/ajax/libs/randomcolor/0.5.2/randomColor.min.js")
  script(src="/scripts/constants.js")

  block scripts
